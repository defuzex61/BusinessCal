<UserControl x:Class="BusinessCal.item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BusinessCal"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="530">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="92*" />
            <ColumnDefinition Width="351*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Image  x:Name="itemImg"  Margin="2,5,12,5" Source="/pc.png" Stretch="Fill" Width="50" Height="50"/>

        <TextBlock x:Name="cardTb" Text="Микрофонить" FontSize="20" Margin="20,0,10,0" VerticalAlignment="Center" Grid.Column="1" Height="26"/>

        <CheckBox x:Name="isSelected" Grid.Column="2" IsChecked="False" Margin="18,0,10,0"/>
    </Grid>
</UserControl>
