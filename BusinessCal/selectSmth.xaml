<Page x:Class="BusinessCal.selectSmth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BusinessCal"
      mc:Ignorable="d" 
      d:DesignHeight="382" d:DesignWidth="530"
      Title="selectSmth">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="311*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="itemsLb" Grid.Column="0" Margin="10,10,10,8" Grid.ColumnSpan="2" ></ListBox>
        <Button x:Name="saveBtn" Content="Соханить" Grid.Row="1" VerticalAlignment="Center" Height="25" Margin="94,0,95,0" Click="saveBtn_Click"/>
        <Button x:Name="exitBtn" Grid.Column="1" Content="Выход" Grid.Row="1" VerticalAlignment="Center" Height="25" Margin="92,0,92,0" Click="exitBtn_Click"/>

    </Grid>
</Page>
